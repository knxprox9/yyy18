{
  "component": {
    "name": "EmbeddableProductCard",
    "version": "1.0.0",
    "description": "Standalone product card component for digital payment cards",
    "features": [
      "Arabic RTL support",
      "12+ payment card types",
      "Fully responsive design",
      "Self-contained component",
      "Theme customization",
      "Payment method callbacks",
      "Professional animations",
      "Accessibility support"
    ]
  },
  "integration": {
    "platforms": [
      "React 16.8+",
      "Next.js",
      "Gatsby",
      "WordPress",
      "Static HTML",
      "Vue.js (with adapter)",
      "Angular (with adapter)"
    ],
    "dependencies": {
      "required": [
        "react>=16.8.0",
        "styled-components>=5.0.0"
      ],
      "optional": [
        "react-dom>=16.8.0"
      ]
    }
  },
  "customization": {
    "sizes": ["200px", "240px", "280px", "320px", "custom"],
    "themes": ["light", "dark"],
    "languages": ["ar", "en"],
    "shadows": ["none", "subtle", "default", "strong"],
    "features": {
      "showVideo": "boolean",
      "showPromoItems": "boolean", 
      "showFavoriteButton": "boolean",
      "showToggleButton": "boolean"
    }
  },
  "payment_methods": [
    "visa",
    "mastercard", 
    "googleplay",
    "roblox",
    "playstation",
    "amazon",
    "itunes",
    "shein",
    "steam",
    "fortnite",
    "razer",
    "flower"
  ]
}